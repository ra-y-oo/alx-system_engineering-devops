#!/bin/bash

# Retrieve the network interfaces
interfaces=$(ip -o -4 route show to default | awk '{print $5}')

# Iterate over each interface and display the IPv4 IPs
for interface in $interfaces; do
    ipv4=$(ip -4 addr show dev $interface | grep -oP '(?<=inet\s)\d+(\.\d+){3}')
    echo "Interface $interface: $ipv4"
done
